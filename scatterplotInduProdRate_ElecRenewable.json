{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
    "data": {"url": "https://raw.githubusercontent.com/stingyblingy/Week9Homework/main/Country_data.csv"
    },
    "title":{ "text":"Population, GDP and Carbon Dioxide Emission ",
    "color":"#382119",
    "fontSize": 15},
    "background":"#fcfaf2",
        "params": [
        {
          "name": "Continent_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "labels": [
              "Show All",
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "name": "Continent Selection: "
          }
        }
      ],
            "transform": [
        {
          "filter": "datum.Continent == Continent_selection || Continent_selection ==null"
        }
      ],
  "encoding": {
    "y": {
      "field": "CountryName",
      "type": "nominal",
      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      }
    },
    "x": {
      "field": "Industrialproductiongrowthrate",
      "type": "quantitative",
      "scale": {"padding": 20},
      "axis": {
        "gridColor": {
          "condition": {"test": "datum.value === 0", "value": "black"},
          "value": "#ddd"
        }
      }
    }
  },
  "layer": [
    {"mark": "bar"},
    {
      "mark": {
        "type": "text",
        "align": {"expr": "datum.Industrialproductiongrowthrate < 0 ? 'right' : 'left'"},
        "dx": {"expr": "datum.Industrialproductiongrowthrate < 0 ? -2 : 2"}
      },
      "encoding": {"text": {"field": "Industrialproductiongrowthrate", "type": "quantitative"}}
    }
  ]
}
